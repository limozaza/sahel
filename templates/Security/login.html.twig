{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/login.css') }}">
{% endblock %}
{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-12">
                <div id="form-connexion" class="offset-md-3 offset-sm-1 col-md-6 col-sm-10">
                </div>
                <div class="d-none">
                    {{ form_start(form) }}
                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}
                    <button class="btn btn-primary" type="submit">Se connecter</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div>

        </div>
    </div>
{% endblock %}



{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/login.js') }}"></script>
{% endblock %}
